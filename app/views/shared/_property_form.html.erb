
<%= form_for(@property) do |f| %>
<div class="form-group">
  <%= f.label :property_type %>
  <%= f.select :property_type, ["House", "Appartment"] %>
</div>
<div class="form-group">
  <%= f.label :street %>
  <%= f.text_field :street, class: 'form-control' %>
  <%= f.label :house_number %>
  <%= f.number_field :house_number, class: 'form-control' %>
  <%= f.label :zip_code %>
  <%= f.number_field :zip_code, class: 'form-control' %>
  <%= f.label :city %>
  <%= f.text_field :city, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :living_space %>
  <%= f.number_field :living_space, class: 'form-control' %>
  <%= f.label :plot_area %>
  <%= f.text_field :plot_area, class: 'form-control' %>
  <%= f.label :number_of_rooms %>
  <%= f.number_field :number_of_rooms, class: 'form-control' %>
  <%= f.label :construction_year %>
  <%= f.number_field :construction_year, class: 'form-control' %>
  <%= f.label :description %>
  <%= f.text_field :description, class: 'form-control' %>
</div>
<%= f.submit 'Submit', class: 'btn btn-primary' %>
<% end %>
